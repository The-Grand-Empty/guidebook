{% if site.logo_variants[include.color_scheme] %}
$logo: "{{ site.logo_variants[include.color_scheme] | relative_url }}";
{% endif %}
.site-title {
    padding-top: 0;
    padding-bottom: 0;
    padding-right: 0;
    padding-left: 0;
}
li.aux-nav-list-item:has(.js-set-#{$color-scheme}-mode) {
    display: none;
}
iframe.discord-widget {
    -moz-box-shadow: 0 0 1rem #333;
    -webkit-box-shadow: 0 0 1rem #333;
    box-shadow: 0 0 1rem #333;
    max-width: 350px;
    height: 500px;
    border-radius: 7px;
}
.discord-channel, .discord-role {
    @extend .btn;
    padding: 0.3em 0.3em;
    line-height: normal;
    display: inline;
    font-family: $mono-font-family;
}
.discord-channel .hashtag, .discord-role .atsign {
    padding-right: 0.2em;
}